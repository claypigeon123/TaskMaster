<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/list_view_item_checkbox"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"/>

        <TextView
            android:id="@+id/list_view_item_text"
            android:layout_weight="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/desc"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/list_view_item_description"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/exp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/list_view_item_exp"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/gold"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/list_view_item_gold"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/list_view_item_importance_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/low"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/list_view_item_importance_text"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>